<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane prefHeight="387.0" prefWidth="536.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gestiondepedidoshibernate.controllers.MainViewController">
   <bottom>
      <Label text="Esta etiqueta no hace nada" textFill="#0598ff" BorderPane.alignment="CENTER" />
   </bottom>
   <center>
      <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnCerrarSesion" mnemonicParsing="false" onAction="#logout" style="-fx-background-color: #0598ff;" text="Cerrar sesión" textFill="WHITE">
               <VBox.margin>
                  <Insets bottom="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </Button>
            <BorderPane prefHeight="500.0">
               <top>
                  <Label alignment="CENTER" text="Bienvenido, usuario estos son tus pedidos:" textFill="#0598ff" BorderPane.alignment="CENTER">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
               </top>
               <center>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                     <children>
                        <TableView fx:id="tvPedidos" prefHeight="200.0" prefWidth="200.0">
                          <columns>
                            <TableColumn fx:id="colIdPedido" prefWidth="75.0" text="ID" />
                            <TableColumn fx:id="colCodPedido" prefWidth="75.0" text="CÓDIGO DE PEDIDO" />
                              <TableColumn fx:id="colFechaPedido" prefWidth="75.0" text="FECHA" />
                              <TableColumn fx:id="colUsuarioPedido" prefWidth="75.0" text="USUARIO" />
                              <TableColumn fx:id="colTotalPedido" prefWidth="75.0" text="TOTAL" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                           <VBox.margin>
                              <Insets bottom="20.0" />
                           </VBox.margin>
                        </TableView>
                        <Button fx:id="btnNuevoPedido" mnemonicParsing="false" style="-fx-background-color: #0598ff;" text="Nuevo pedido" textFill="WHITE" />
                     </children>
                     <BorderPane.margin>
                        <Insets left="20.0" right="20.0" />
                     </BorderPane.margin>
                  </VBox>
               </center>
            </BorderPane>
         </children>
      </VBox>
   </center>
</BorderPane>
